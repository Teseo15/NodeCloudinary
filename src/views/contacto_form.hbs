<div class="row">
    <div class="cold-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/contactos/add" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text"  name="name" class="form-control" placeholder="nombre"/>
                    </div>
                    <div class="form-group">
                        <input type="text"  name="lastname" class="form-control" placeholder="apellido"/>
                    </div>                    
                    <div class="form-group">
                        <input type="email"  name="email" class="form-control" placeholder="email"/>
                    </div> 
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" name="image" class="custom-file-input" id="inputGropuFile01"/>
                            <label for="inputGroupFile01" class="custom-file-label">
                                Seleccionar Imagen
                            </label>
                        </div>
                    </div>
                    <button class="btn btn-primary">
                        Subir Photo
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo</th>
                    <th>Operaciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{lastname}}</td>
                    <td>{{email}}</td>
                    <td>
                        <a href="{{imageURL}}" target="_blank" class="btn btn-primary">Ver</a>
                        <a href="/images/delete/{{_id}}" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>
    </div>
</div>

